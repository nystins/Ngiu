<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.record.RecordFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/record_top_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:background="@color/color_blue_base"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar_record">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_record_type_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.02" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_record_type_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.25" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_record_type_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.63" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_record_type_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.98" />

            <TextView
                android:id="@+id/tvSectionExpense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/record_section_expense"
                android:textColor="@color/color_inactive_text"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/guideline_record_type_1"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tvSectionIncome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/record_section_income"
                android:textColor="@color/color_inactive_text"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/guideline_record_type_2"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tvSectionTransfer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/record_section_transfer"
                android:textColor="@color/color_inactive_text"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/guideline_record_type_3"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tvSectionDebitCredit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/record_section_debit_credit"
                android:textColor="@color/color_inactive_text"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/guideline_record_type_4"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tvSectionExpensePointer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-5dp"
                android:visibility="invisible"
                app:drawableStartCompat="@drawable/ic_baseline_arrow_drop_up_24"
                app:drawableTint="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tvSectionExpense"
                app:layout_constraintStart_toStartOf="@id/tvSectionExpense" />
            <TextView
                android:id="@+id/tvSectionIncomePointer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-5dp"
                android:visibility="invisible"
                app:drawableStartCompat="@drawable/ic_baseline_arrow_drop_up_24"
                app:drawableTint="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tvSectionIncome"
                app:layout_constraintStart_toStartOf="@id/tvSectionIncome" />
            <TextView
                android:id="@+id/tvSectionTransferPointer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-5dp"
                android:visibility="invisible"
                app:drawableStartCompat="@drawable/ic_baseline_arrow_drop_up_24"
                app:drawableTint="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tvSectionTransfer"
                app:layout_constraintStart_toStartOf="@id/tvSectionTransfer" />
            <TextView
                android:id="@+id/tvSectionDebitCreditPointer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="-5dp"
                android:visibility="invisible"
                app:drawableStartCompat="@drawable/ic_baseline_arrow_drop_up_24"
                app:drawableTint="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tvSectionDebitCredit"
                app:layout_constraintStart_toStartOf="@id/tvSectionDebitCredit" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_record"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
            app:menu="@menu/title_menu"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-18dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/record_top_layout"
        tools:ignore="MissingConstraints">




        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:visibility="invisible" />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>