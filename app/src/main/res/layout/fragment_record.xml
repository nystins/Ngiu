<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.record.RecordFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/record_top_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:background="@color/app_title_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar_record">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_record_type_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.25" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_record_type_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.45" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_record_type_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.67" />

            <TextView
                android:id="@+id/tvSectionExpense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="12dp"
                android:singleLine="true"
                android:text="@string/record_section_expense"
                android:textColor="@color/app_title_text_inactive"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tvSectionIncome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/record_section_income"
                android:textColor="@color/app_title_text_inactive"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/guideline_record_type_2"
                app:layout_constraintTop_toTopOf="@id/tvSectionExpense"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tvSectionTransfer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/record_section_transfer"
                android:textColor="@color/app_title_text_inactive"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/guideline_record_type_3"
                app:layout_constraintTop_toTopOf="@id/tvSectionExpense"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tvSectionDebitCredit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:singleLine="true"
                android:text="@string/record_section_debit_credit"
                android:textColor="@color/app_title_text_inactive"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/guideline_record_type_4"
                app:layout_constraintTop_toTopOf="@id/tvSectionExpense"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tvSectionExpensePointer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:visibility="invisible"
                app:drawableStartCompat="@drawable/ic_baseline_arrow_drop_up_24"
                app:drawableTint="@color/app_title_text"
                app:layout_constraintTop_toBottomOf="@id/tvSectionExpense"
                app:layout_constraintStart_toStartOf="@id/tvSectionExpense" />
            <TextView
                android:id="@+id/tvSectionIncomePointer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:visibility="invisible"
                app:drawableStartCompat="@drawable/ic_baseline_arrow_drop_up_24"
                app:drawableTint="@color/app_title_text"
                app:layout_constraintTop_toBottomOf="@id/tvSectionIncome"
                app:layout_constraintStart_toStartOf="@id/tvSectionIncome" />
            <TextView
                android:id="@+id/tvSectionTransferPointer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:visibility="invisible"
                app:drawableStartCompat="@drawable/ic_baseline_arrow_drop_up_24"
                app:drawableTint="@color/app_title_text"
                app:layout_constraintTop_toBottomOf="@id/tvSectionTransfer"
                app:layout_constraintStart_toStartOf="@id/tvSectionTransfer" />
            <TextView
                android:id="@+id/tvSectionDebitCreditPointer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:visibility="invisible"
                app:drawableStartCompat="@drawable/ic_baseline_arrow_drop_up_24"
                app:drawableTint="@color/app_title_text"
                app:layout_constraintTop_toBottomOf="@id/tvSectionDebitCredit"
                app:layout_constraintStart_toStartOf="@id/tvSectionDebitCredit" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_record"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:menu="@menu/title_menu"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
            tools:ignore="MissingConstraints"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-10dp"
        android:background="@color/app_section_background"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/record_top_layout"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imgTransactionIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_fastfood_24"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_record_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Dinner"
            android:textColor="@color/app_amount"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@id/imgTransactionIcon"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_record_budget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/option_budget_balance"
            android:textSize="12dp"
            android:textColor="@color/app_sub_line_text"
            app:layout_constraintStart_toStartOf="@id/tv_record_category"
            app:layout_constraintTop_toBottomOf="@id/tv_record_category" />

        <TextView
            android:id="@+id/tv_record_budget_balance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="$323.78"
            android:textSize="12dp"
            android:textColor="@color/app_sub_line_text"
            app:layout_constraintStart_toEndOf="@id/tv_record_budget"
            app:layout_constraintTop_toTopOf="@id/tv_record_budget" />

        <TextView
            android:id="@+id/tv_record_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:text="32.00"
            android:textSize="22dp"
            android:textColor="@color/app_expense_amount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imgTransactionIcon" />



    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>