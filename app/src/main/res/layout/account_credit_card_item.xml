<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@color/app_section_background"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/iv_drop_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_credit_card_24"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAccountName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_drop_down"
        app:layout_constraintStart_toEndOf="@+id/iv_drop_down"
        app:layout_constraintTop_toTopOf="@id/iv_drop_down"
        tools:text="Account Name" />


    <TextView
        android:id="@+id/tvCardNumber"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@id/tvAccountName"
        app:layout_constraintStart_toEndOf="@+id/tvAccountName"
        app:layout_constraintTop_toTopOf="@id/tvAccountName"
        tools:text="2569" />

    <TextView
        android:id="@+id/tvAccountBalance"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="@+id/tvAccountName"
        app:layout_constraintStart_toStartOf="@+id/tvAccountName"
        app:layout_constraintTop_toBottomOf="@+id/tvAccountName"
        tools:text="-159.68" />

    <TextView
        android:id="@+id/tvNumberOfDays"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvAccountBalance"
        app:layout_constraintEnd_toStartOf="@+id/tvDaysLeft"
        app:layout_constraintTop_toTopOf="@+id/tvAccountBalance"
        tools:text="10" />

    <TextView
        android:id="@+id/tvDaysLeft"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="@+id/tvNumberOfDays"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvNumberOfDays"
        tools:text="Days Left" />

    <TextView
        android:id="@+id/tvCurrentBalance"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="@+id/tvAccountBalance"
        app:layout_constraintStart_toStartOf="@+id/tvAccountBalance"
        app:layout_constraintTop_toBottomOf="@+id/tvAccountBalance"
        android:text="@string/option_account_current_balance"
        />


    <TextView
        android:id="@+id/tvStatementOrPaymentDays"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvCurrentBalance"
        app:layout_constraintEnd_toStartOf="@+id/tvStatementOrPaymentDate"
        app:layout_constraintTop_toTopOf="@+id/tvCurrentBalance"
        tools:text="Payment Due Date" />

    <TextView
        android:id="@+id/tvStatementOrPaymentDate"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="@+id/tvStatementOrPaymentDays"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvStatementOrPaymentDays"
        tools:text="09-28" />





</androidx.constraintlayout.widget.ConstraintLayout>