<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#D6D2D2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D6D2D2"
        android:orientation="vertical"
        tools:context=".ui.setting.SettingFragment">

        <TextView
            android:id="@+id/tv_setting"
            android:text="Setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:textStyle="bold"
            android:textColor="@color/cardview_dark_background"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_categories"
            android:text="Categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/tv_expense"
            android:text="Expense"
            android:padding="12dp"
            android:drawableRight="@drawable/ic_baseline_arrow_right_24"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/color_option_text"
            android:textSize="15sp"

            />
        <TextView
            android:id="@+id/tv_income"
            android:text="Income"
            android:padding="12dp"
            android:drawableRight="@drawable/ic_baseline_arrow_right_24"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/color_option_text"/>
        <TextView
            android:id="@+id/tv_merchant"
            android:text="Merchant"
            android:padding="12dp"
            android:drawableRight="@drawable/ic_baseline_arrow_right_24"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/color_option_text"/>
        <TextView
            android:id="@+id/tv_person"
            android:text="Person"
            android:padding="12dp"
            android:background="@color/white"
            android:drawableRight="@drawable/ic_baseline_arrow_right_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/color_option_text"/>
        <TextView
            android:id="@+id/tv_project"
            android:text="Project"
            android:padding="12dp"
            android:background="@color/white"
            android:drawableRight="@drawable/ic_baseline_arrow_right_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/color_option_text"/>

        <TextView
            android:id="@+id/tv_advanced"
            android:text="Advanced"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/color_option_text"/>

        <LinearLayout
            android:orientation="horizontal"
            android:padding="2dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_basecurr"
                android:text="Base Currency"
                android:layout_weight="1"
                android:padding="12dp"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/color_option_text"/>

            <TextView
                android:id="@+id/tv_currency"
                android:layout_weight="1"
                android:text="US Dollar(USD)"
                android:padding="12dp"
                android:background="@color/white"
                android:gravity="right"
                android:drawableRight="@drawable/ic_baseline_arrow_right_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/color_option_text"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_language"
            android:text="Language"
            android:padding="12dp"
            android:background="@color/white"
            android:drawableRight="@drawable/ic_baseline_arrow_right_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/color_option_text"/>

        <LinearLayout
            android:orientation="horizontal"
            android:padding="2dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_reimbstat"
                android:text="Reimbursement include in Statistics"
                android:layout_weight="1"
                android:padding="12dp"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/color_option_text"/>

            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:padding="2dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_alphabet"
                android:text="Sort Alphabetically"
                android:layout_weight="1"
                android:padding="12dp"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/color_option_text"/>

            <androidx.appcompat.widget.SwitchCompat
                android:enabled="true"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_about"
            android:text="About"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:padding="8dp"
            android:textStyle="bold"
            android:textColor="@color/color_option_text"/>

        <TextView
            android:id="@+id/tv_ngiu"
            android:text="About Ngiu"
            android:padding="12dp"
            android:drawableRight="@drawable/ic_baseline_arrow_right_24"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/color_option_text"/>

    </LinearLayout>
</LinearLayout>