<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@color/app_section_background"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/iv_drop_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_credit_card_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tvLenderOrBorrow"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_drop_down"
        app:layout_constraintStart_toEndOf="@+id/iv_drop_down"
        app:layout_constraintTop_toTopOf="@id/iv_drop_down"
        tools:text="Name" />

    <TextView
        android:id="@+id/tvAccountLendOrBorrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Borrow"
        android:background="@color/app_label_text"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toTopOf="@id/tvLenderOrBorrow"
        app:layout_constraintBottom_toBottomOf="@id/tvLenderOrBorrow"
        app:layout_constraintEnd_toStartOf="@+id/tvAccountBalance"/>

    <TextView
        android:id="@+id/tvAccountBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="$700.00"
        app:layout_constraintTop_toTopOf="@id/tvAccountLendOrBorrow"
        app:layout_constraintBottom_toBottomOf="@id/tvAccountLendOrBorrow"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>